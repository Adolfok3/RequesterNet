<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Adolfok3</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>request, http, client, class, helper, simple, lib, library, rest, api</PackageTags>
    <PackageIcon>Icon.png</PackageIcon>
    <Description>RequesterNet is a simple and fast REST and HTTP API Client for .NET Core.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.19" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.19" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Resources\Icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
